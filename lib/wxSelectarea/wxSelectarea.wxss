.shade {
  background-color: #000;
  opacity: .6;
  position: absolute;
  display: none;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999
}
.show {
  display: block;
}
.handle-bar {
  padding: 0 15px;
  height: 80rpx;
  background-color: #eee;
}
.confirm {
  text-align: right
}
.selector-area {
  height: 600rpx;
  width: 100%;
  background-color: #e9e7ef;
  position: absolute;
  bottom: 0;
  opacity: 1;
}
.selector {
  text-align: center;
  height: 520rpx;
}
.picker {
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.actived {
  color: blue
}
.area-selector {
  height: 520rpx;
}
.white-shade {
  position: absolute;
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  left: 0;
  margin-top: 240rpx;
}