<import src="/pages/common/header/header.wxml" />
<import src="/pages/common/footer/footer.wxml" />
<view class="container">
  <template is="header" data="{{userInfo: userInfo}}"/>
  <view class="user_address_box">
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title weui-cellsrpx">
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="/public/icon/username.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd weui-cell__bdrpx">姓名</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">
                    <input class="weui-input weui-inputrpx" placeholder="请输入姓名" />
                </view>
            </view>
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="/public/icon/dial.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd weui-cell__bdrpx">手机号码</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">
                    <input class="weui-input weui-inputrpx" type="number" placeholder="请输入号码" /> 
                </view>
            </view>
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="/public/icon/area.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd weui-cell__bdrpx">
                地区省份
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access">
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <input class="weui-input weui-inputrpx" placeholder="选择省份" />
                </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="/public/icon/area.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd weui-cell__bdrpx">地区市级</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <input class="weui-input weui-inputrpx" placeholder="选择市级" />
                </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="/public/icon/area.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd weui-cell__bdrpx">地区县级</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <input class="weui-input weui-inputrpx" placeholder="选择县级" />
                </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" style="border-bottom:none;" >
                <view class="weui-cell__hd">
                    <image src="/public/icon/address.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd weui-cell__bdrpx">详细地址</view>
            </view>
            <view class="weui-cell weui-cell_access weui-cell_last_border" hover-class="weui-cell_active">
                <textarea class="weui-textarea" placeholder="请输入详细地址" style="height: 80rpx;" />
            </view>
        </view>
  </view>
  <button class="weui-btn user_address_add_but" type="primary" formType="submit" >保 存</button>
  <button class="weui-btn user_address_add_but" type="warn" formType="reset">清 空</button>
  <template is="footer" />
</view>
