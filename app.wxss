.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
#hidden{
  display: none;
}
.button_submit{
  margin: 20rpx auto;
}
/** 修改button默认的点击态样式类**/
.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: blue;
}
/** 公共头部样式 **/
.header_box{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  background: #353535;
} 
.userinfo-avatar {
  float: left;
  margin: 0 0 0 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  float: left;
  margin: 0 0 0 20rpx;
  color: #aaa;
}
.userinfo-button{
    float: right;
    margin: 10rpx 10rpx 0 ;
}
/** 公共脚部样式 **/
#page-footer {
  display: block;
  width: 100%;
  min-height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  color: #1e1e1e;
  font-size: 30rpx;
  margin: 20rpx auto 0;
  background: #edf0f5;
  font-weight: 700;
}
/** 公共样式 **/
.flex-item-section{
  display: block;
  width: 100%;
  min-height: 100rpx;
}
.flex-item-4{
  display: block;
  float: left;
  width: 25%;
  min-height: 100rpx;
}
.flex-item-icon{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx auto;
}
.position-r{
  position: relative;
}
.position-a{
  position: absolute;
}
.position-f{
  position: fixed;
}
.line{
  width: 100%;
  height: 50rpx;
  background: #edf0f5;
  margin: 10rpx auto;
}
